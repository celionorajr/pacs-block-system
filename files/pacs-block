#!/bin/bash
# Comando r√°pido para controle do PACS
# Vers√£o: 2.0.0

VERSION="2.0.0"

case "$1" in
    "on")
        echo "üîí Ativando bloqueio..."
        /usr/local/bin/manage-block.sh on
        ;;
    "off")
        echo "üîì Desativando bloqueio..."
        /usr/local/bin/manage-block.sh off
        ;;
    "status"|"st")
        /usr/local/bin/manage-block.sh status
        ;;
    "init")
        echo "‚öôÔ∏è  Inicializando sistema..."
        /usr/local/bin/manage-block.sh init
        ;;
    "check-updates"|"check")
        /usr/local/bin/manage-block.sh check-updates
        ;;
    "update"|"up")
        echo "üì¶ Atualizando sistema..."
        /usr/local/bin/manage-block.sh update
        ;;
    "help"|"-h"|"--help")
        echo "PACS Block v$VERSION"
        echo "Uso: pacs-block [COMANDO]"
        echo ""
        echo "Comandos:"
        echo "  on              - Ativar bloqueio"
        echo "  off             - Desativar bloqueio"
        echo "  status, st      - Verificar status"
        echo "  init            - Configurar sistema"
        echo "  check-updates   - Verificar atualiza√ß√µes"
        echo "  update, up      - Atualizar sistema"
        echo "  help            - Mostrar ajuda"
        ;;
    *)
        echo "PACS Block v$VERSION"
        echo "Uso: pacs-block {on|off|status|init|check-updates|update|help}"
        ;;
esac