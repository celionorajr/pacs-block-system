#!/bin/bash
# Comando r√°pido para controle do PACS
# Vers√£o: 1.0.0

case "$1" in
    "on")
        echo "üîí Ativando bloqueio..."
        manage-block.sh on
        ;;
    "off")
        echo "üîì Desativando bloqueio..."
        manage-block.sh off
        ;;
    "status")
        manage-block.sh status
        ;;
    "init")
        echo "‚öôÔ∏è  Inicializando sistema..."
        manage-block.sh init
        ;;
    "check-updates")
        manage-block.sh check-updates
        ;;
    "update")
        echo "üì¶ Atualizando sistema..."
        manage-block.sh update
        ;;
    *)
        echo "PACS Block v1.0.0"
        echo "Uso: pacs-block {on|off|status|init|check-updates|update}"
        echo ""
        echo "Exemplos:"
        echo "  pacs-block on       # Ativa bloqueio"
        echo "  pacs-block off      # Remove bloqueio"
        echo "  pacs-block status   # Verifica status"
        echo "  pacs-block init     # Configura sistema"
        echo "  pacs-block check-updates # Verifica atualiza√ß√µes"
        echo "  pacs-block update   # Atualiza sistema"
        ;;
esac